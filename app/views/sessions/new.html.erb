<h2>Sign in</h2>

<div class="row">
    <div class="span6 offset3">

      <%= form_for :session, url: sessions_path do |f| %>

			<%= f.text_field :name, placeholder: "Name" %> <br>
		  <%= f.text_field :email, placeholder: "Email" %> <br>
			<%= f.text_field :password, placeholder: "Password" %> <br>

		  <%= f.submit %> <br>

      <% end %>

    </div>
</div>