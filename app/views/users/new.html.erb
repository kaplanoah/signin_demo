<h2>Sign up</h2>

<div>

  <%= form_for @user do |f| %>

  	<%= f.text_field :name, placeholder: "Name" %> <br>
    <%= f.text_field :email, placeholder: "Email address" %> <br>
    <%= f.text_field :password, placeholder: "Password" %> <br>
    <%= f.text_field :password_confirmation, placeholder: "Confirm password" %> <br><br>

    <%= f.submit "Create my account" %> <br>

  <% end %>

</div>
